<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoKiosk.Presentation.Views.Pages.MainPage"
             xmlns:videoSDK="clr-namespace:TrueConfVideoSDK.Presentation;assembly=TrueConfVideoSDK"
             NavigationPage.HasNavigationBar="False" >
    <ScrollView>
        <Grid RowDefinitions="10*, *"
              RowSpacing="20">
            <videoSDK:VideoSDKControl x:Name="VideoSDKControl"
                                      Grid.Row="0"/>
            <Grid Grid.Row="1"
                  ColumnDefinitions="3*, *, 3*"
                  Padding="0,0,0,20">
                <Button Grid.Column="1"
                        x:Name="ActionBtn"
                        Text="Call"
                        Clicked="ActionBtn_Clicked"/>
            </Grid>
            
        </Grid>
    </ScrollView>

</ContentPage>

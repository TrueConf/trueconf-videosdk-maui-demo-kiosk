<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DemoKiosk.Presentation.ViewModels"
             x:Class="DemoKiosk.Presentation.Views.Pages.AlertPage"
             Title="AlertPage">
    <ContentPage.BindingContext>
        <vm:AlertViewModel/>
    </ContentPage.BindingContext>

    <Grid RowDefinitions="2*,3*,2*"
          Padding="10,20"
          RowSpacing="10">
        <Grid Grid.Row="0">
            <Label Text="{Binding Title}"
                   FontSize="Large"/>
        </Grid>
        <Grid Grid.Row="1">
            <Label Text="{Binding Text}"
                   FontSize="Default"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid ColumnDefinitions="5*,*">
                <Button Grid.Column="1"
                        x:Name="okBtn"
                        Text="OK"
                        Clicked="okBtn_Clicked"/>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>